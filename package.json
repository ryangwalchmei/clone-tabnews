{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementação para o tabnews.com.br",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "test": "npm run services:up &&  concurrently -n next,jest --hide next --kill-others -k --success command-jest \"next dev\" \"jest --runInBand --verbose\" ",
    "test:watch": "jest --watchAll --runInBand",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migration:down": "node-pg-migrate -m infra/migrations --envPath .env.development down",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "lint:eslint:check": "next lint --dir .",
    "prepare": "husky",
    "commit": "npm run lint:sensitive-data:check && cz",
    "lint:sensitive-data:check": "npx check-for-secrets all-files"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "next": "15.2.1",
    "node-pg-migrate": "7.9.1",
    "pg": "8.13.3",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "check-for-secrets": "1.1.8",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "15.2.1",
    "eslint-config-prettier": "10.0.2",
    "eslint-plugin-jest": "28.11.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
